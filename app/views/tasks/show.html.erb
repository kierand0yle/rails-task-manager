<h2>Task Info</h2>

<div id="indiv-task">
<h3><%= @task.title %></h3>
<p><%= @task.details %></p>

<% if @task.completed %>
  <p>✅</p>

  <% else %>
  <p>❌</p>
<% end  %>
</div>

<p><%= link_to "Edit Task", edit_path(@task), class: "btn btn-primary" %></p>
<p><%= link_to "Delete", task_path(@task), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?"} %></p>

<p><%= link_to "Back to Tasks", tasks_path, class: "btn btn-info" %></p>

